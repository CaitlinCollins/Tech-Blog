<div class="createPost">
    <h2>Edit/Delete Post</h2>
     <form class="post-form">
        <div class="form">
        <label class="label" for="title">Title</label>
        </div>
        <div class="form">
        <input class="input" type="text" id="title" value="{{post.title}}"> 
        </div>
        <div class="form">
        <label class="label" for="Content">Content</label>
        </div>
        <div class="form">
        <textarea class="input" type="text" id="content">
        {{post.content}}
        </textarea>  
        </div>
        <button id="edit" data-id="{{post.id}}">Edit</button>
        <button id="delete" data-id="{{post.id}}">Delete</button>
    </form>
</div>

<script src="/js/edit.js"></script>